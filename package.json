{
  "name": "personal-hub",
  "version": "0.1.0",
  "description": "Personal productivity hub with todos, calendar, and notes",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:fast": "next dev --turbopack --port 3000",
    "dev:debug": "NODE_OPTIONS='--inspect' next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "preview": "npm run build && npm run start",
    "lint": "next lint -d .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:mock": "CI=true playwright test",
    "test:e2e:ci": "playwright test --config=playwright.config.ci.ts",
    "test:e2e:smoke": "playwright test smoke.spec.ts",
    "test:e2e:ci-smoke": "CI=true playwright test ci-smoke.spec.ts --config=playwright.config.ci-smoke.ts",
    "test:e2e:auth": "playwright test auth-e2e.spec.ts",
    "test:e2e:app": "playwright test app-e2e.spec.ts",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:e2e:cross-browser": "playwright test cross-browser.spec.ts",
    "test:e2e:visual": "playwright test visual-regression.spec.ts",
    "test:e2e:profile": "playwright test user-profile.spec.ts",
    "test:e2e:notes": "playwright test notes.spec.ts",
    "test:e2e:calendar": "playwright test calendar.spec.ts"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.0.1",
    "@radix-ui/react-switch": "^1.2.5",
    "@tanstack/react-query": "^5.79.0",
    "@types/react-datepicker": "^7.0.0",
    "axios": "^1.9.0",
    "claude": "^0.1.2",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.16.0",
    "lucide-react": "^0.511.0",
    "next": "15.3.2",
    "next-intl": "^4.1.0",
    "oidc-client-ts": "^3.3.0",
    "react": "^19.0.0",
    "react-datepicker": "^8.4.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.56.4",
    "react-hot-toast": "^2.5.2",
    "react-oidc-context": "^3.3.0",
    "recharts": "^2.15.3",
    "zod": "^3.25.41"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.52.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.54",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "express": "^5.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "msw": "^2.8.6",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
